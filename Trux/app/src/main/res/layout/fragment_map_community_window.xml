<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="se.gu.tux.trux.gui.community.MapCommunityWindow"
    android:id="@+id/menuLayout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:id="@+id/backLayout">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/contentContainer"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="#ff3a475d">

        <Space
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/messageicon"
            android:id="@+id/messageButton"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/profileicon"
            android:id="@+id/infoButton"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/removefriendicon"
            android:id="@+id/removeFriend"/>

        <Space
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>


    </LinearLayout>
</LinearLayout>
