<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="se.gu.tux.trux.gui.detailedStats.Stats"
    android:background="#E0E0E0"
    android:layout_margin="10dp">


    <LinearLayout
        android:id="@+id/stats_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="@string/speed_button_text"
                android:id="@+id/speed_button"
                android:layout_weight="1"
                android:background="@drawable/button_clickable_new"
                android:textColor="#E0E0E0"
                android:layout_marginEnd="5dp"/>

            <Button
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="@string/fuel_button_text"
                android:id="@+id/fuel_button"
                android:layout_weight="1"
                android:background="@drawable/button_clickable_new"
                android:textColor="#E0E0E0"
                android:layout_marginStart="5dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="@string/distance_traveled_text"
                android:id="@+id/distance_traveled"
                android:layout_weight="1"
                android:background="@drawable/button_clickable_new"
                android:textColor="#E0E0E0"
                android:layout_marginEnd="5dp"/>

            <Button
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="@string/coming_soon_text"
                android:id="@+id/button6"
                android:layout_weight="1"
                android:background="@drawable/button_clickable_new"
                android:textColor="#E0E0E0"
                android:layout_marginStart="5dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_weight="1">

            <Button
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="@string/coming_soon_text"
                android:id="@+id/button7"
                android:layout_weight="1"
                android:background="@drawable/button_clickable_new"
                android:textColor="#E0E0E0"
                android:layout_marginEnd="5dp"/>

            <Button
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:text="@string/coming_soon_text"
                android:id="@+id/button8"
                android:layout_weight="1"
                android:background="@drawable/button_clickable_new"
                android:textColor="#E0E0E0"
                android:layout_marginStart="5dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/overall_statistics_text"
                android:id="@+id/overall_button"
                android:background="@drawable/button_clickable_new"
                android:textColor="#E0E0E0"
                android:layout_marginBottom="5dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/compare_statistics_text"
                android:id="@+id/compare_statistics"
                android:background="@drawable/button_clickable_new"
                android:textColor="#E0E0E0" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>



