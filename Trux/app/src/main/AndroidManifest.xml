<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tux.gu.se.trux" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/truxicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name="se.gu.tux.trux.gui.BaseAppActivity" >
        </activity>
        <activity
            android:name="se.gu.tux.trux.gui.AboutMenuActivity"
            android:label="About"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.PICK_ACTIVITY" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.gu.tux.trux.gui.ContactMenuActivity"
            android:label="Contact"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.PICK_ACTIVITY" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.gu.tux.trux.gui.SettingsMenuActivity"
            android:label="Settings"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.PICK_ACTIVITY" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.gu.tux.trux.gui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.gu.tux.trux.gui.DriverHomeScreen"
            android:label="Trux - Home"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.gu.tux.trux.gui.detailedStats.Stats"
            android:label="Trux - Stats"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.PICK_ACTIVITY" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.gu.tux.trux.gui.simpleStats.SimpleStats"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="se.gu.tux.trux.gui.detailedStats.OverallStats"
            android:label="@string/title_activity_overall_stats"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="se.gu.tux.trux.gui.ChooseStatScreen"
            android:label="@string/title_activity_choose_stat_screen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="se.gu.tux.trux.gui.community.Community_main"
            android:label="@string/title_activity_community_main" >
        </activity>
        <activity
            android:name="se.gu.tux.trux.gui.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="se.gu.tux.trux.gui.community.FragmentPageAdapterCommunity"
            android:label="@string/title_activity_fragment_page_adapter_community" >
        </activity>
        <activity
            android:name="se.gu.tux.trux.gui.statistics_i.IStatisticsActivity"
            android:label="@string/coming_soon_text" >
        </activity>
        <activity
            android:name="se.gu.tux.trux.gui.main_i.IMainActivity"
            android:label="@string/coming_soon_text" >
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCbI5lHKz2EEGWe3X4ozbVuLbHXVy458Cw" />

        <activity
            android:name="se.gu.tux.trux.gui.community.FriendsWindow"
            android:label="@string/title_activity_friends_window" >
        </activity>
    </application>

</manifest>
